{
  "profileFiles": [
    "Microsoft.PowerShell_profile.ps1",
    "Microsoft.VSCode_profile.ps1",
    "omp.json"
  ],
  "scriptFiles": [
    "Scripts/Core/Get-PlatformInfo.ps1",
    "Scripts/Utils/Get-FileFromAzure.ps1",
    "Scripts/Utils/Get-ConfigFromAzure.ps1",
    "Scripts/Install/Install-WithWinGet.ps1",
    "Scripts/Install/Install-WithBrew.ps1",
    "Scripts/Install/Install-Software.ps1",
    "Scripts/Install/Install-WindowsUpdates.ps1",
    "Scripts/Install/Set-TimeZone.ps1",
    "Scripts/Install/Configure-WindowsTerminal.ps1",
    "Scripts/Install/Install-VisualStudio.ps1",
    "Scripts/Install/Install-Fonts.ps1",
    "Scripts/Profile/Install-ProfileFiles.ps1",
    "Scripts/Profile/Install-ModuleIfMissing.ps1",
    "Scripts/Profile/Get-GitBranches.ps1",
    "Scripts/Profile/Set-DefaultWorkingDirectory.ps1",
    "Scripts/Profile/Initialize-PowerShellProfile.ps1"
  ],
  "software": {
    "windows": [
      {
        "name": "PowerShell",
        "command": "pwsh",
        "packageManager": "winget",
        "packageId": "Microsoft.PowerShell",
        "installArgs": ["install", "-e", "--id", "Microsoft.PowerShell", "--silent", "--accept-package-agreements", "--accept-source-agreements", "--source", "winget"]
      },
      {
        "name": "Git",
        "command": "git",
        "packageManager": "winget",
        "packageId": "Git.Git",
        "installArgs": ["install", "-e", "--id", "Git.Git", "--silent", "--accept-package-agreements", "--accept-source-agreements", "--source", "winget"]
      },
      {
        "name": "Oh My Posh",
        "command": "oh-my-posh",
        "packageManager": "winget",
        "packageId": "JanDeDobbeleer.OhMyPosh",
        "installArgs": ["install", "-e", "--id", "JanDeDobbeleer.OhMyPosh", "--silent", "--accept-package-agreements", "--accept-source-agreements", "--source", "winget"]
      },
      {
        "name": "Visual Studio Code",
        "command": "code",
        "packageManager": "winget",
        "packageId": "Microsoft.VisualStudioCode",
        "installArgs": ["install", "-e", "--id", "Microsoft.VisualStudioCode", "--silent", "--accept-package-agreements", "--accept-source-agreements", "--source", "winget"]
      }
    ],
    "macos": [
      {
        "name": "PowerShell",
        "command": "pwsh",
        "packageManager": "brew",
        "packageId": "powershell",
        "installArgs": ["install", "--cask", "powershell"],
        "isCask": true
      },
      {
        "name": "Git",
        "command": "git",
        "packageManager": "brew",
        "packageId": "git",
        "installArgs": ["install", "git"],
        "isCask": false
      },
      {
        "name": "Oh My Posh",
        "command": "oh-my-posh",
        "packageManager": "brew",
        "packageId": "oh-my-posh",
        "installArgs": ["install", "oh-my-posh"],
        "isCask": false
      },
      {
        "name": "Visual Studio Code",
        "command": "code",
        "packageManager": "brew",
        "packageId": "visual-studio-code",
        "installArgs": ["install", "--cask", "visual-studio-code"],
        "isCask": true
      }
    ]
  },
  "fonts": [
    {
      "name": "Meslo Nerd Font",
      "installCommand": "oh-my-posh font install meslo"
    }
  ]
}
